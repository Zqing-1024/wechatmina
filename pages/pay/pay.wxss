page {
  padding-bottom: 90rpx;
}
/* 获取地址按钮样式表 */
.cart .add_address_row {
  padding: 20rpx;
  background-color: #fff;
}
.cart .address_info_container {
  display: flex;
  padding: 20rpx;
  background-color: #fff;
}
.cart .address_info_container .user_info {
  flex: 5;
  font-size: 26rpx;
}
.cart .address_info_container .user_phone {
  flex: 3;
  text-align: right;
}

/* 购物车商品列表样式 */
.cart .cart_list_container .cart_title {
  font-size: 36rpx;
  padding: 20rpx;
  color: var(--themeColor);
}
.cart .cart_list_container .cart_main .cart_item {
  border-top: 2rpx solid #eee;
  display: flex;
  padding: 10rpx;
}

.cart .cart_list_container .cart_main .cart_item .cart_img_warp {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart .cart_list_container .cart_main .cart_item .cart_img_warp image {
  width: 80%;
}
.cart .cart_list_container .cart_main .cart_item .cart_info_warp {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cart .cart_list_container .cart_main .cart_item .cart_info_warp .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
}
.cart
  .cart_list_container
  .cart_main
  .cart_item
  .cart_info_warp
  .goods_price_warp {
  display: flex;
  justify-content: space-between;
}
.cart
  .cart_list_container
  .cart_main
  .cart_item
  .cart_info_warp
  .goods_price_warp
  .goods_price {
  color: var(--themeColor);
  font-size: 34rpx;
}
.cart
  .cart_list_container
  .cart_main
  .cart_item
  .cart_info_warp
  .goods_price_warp
  .cart_num_tool {
  display: flex;
  justify-content: space-between;
}
.cart
  .cart_list_container
  .cart_main
  .cart_item
  .cart_info_warp
  .goods_price_warp
  .goods_num {
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
/* 购物车结算区域 样式表*/
.cart .footer_tool {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
  display: flex;
}
.cart .footer_tool .total_price_warp {
  flex: 5;
  text-align: right;
  margin-right: 10rpx;
}
.cart .footer_tool .total_price_warp .total_price_text {
  color: var(--themeColor);
  font-size: 34rpx;
  font-weight: 600;
}
.cart .footer_tool .order_pay_warp {
  flex: 3;
  font-size: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: var(--themeColor);
  color: #fff;
}
