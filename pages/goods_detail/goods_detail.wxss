page {
  padding-bottom: 90rpx;
}
.goods_detail .detail_swiper swiper {
  height: 70vw;
  text-align: center;
}
.goods_detail .detail_swiper swiper image {
  width: 65%;
}
.goods_detail .goods_price {
  padding: 15rpx;
  color: var(--themeColor);
  font-weight: 600;
  font-size: 32rpx;
}
.goods_detail .goods_name_row {
  display: flex;

  padding: 10rpx 0;
}
.goods_detail .goods_name {
  flex: 5;
  color: #000;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods_detail .goods_collect {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-left: 2rpx solid #202020;
}
.goods_detail .goods_collect text {
  font-size: 48rpx;
}
.goods_detail .goods_info .goods_info_title {
  font-size: 32rpx;
  font-weight: bold;
  border-top: 10rpx solid #dedede;
  border-bottom: 10rpx solid #dedede;
  color: var(--themeColor);
  padding: 10rpx;
}
.goods_detail .btm_tool {
  border-top: 2rpx solid #6a6a6b;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
}
.goods_detail .btm_tool .tool_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  position: relative;
}
.goods_detail .btm_tool .tool_item button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.goods_detail .btm_tool .btn_cart {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #ffa500;
  color: white;
  font-size: 30rpx;
  font-weight: 600;
}
.goods_detail .btm_tool .btn_buy {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #ea434f;
  color: white;
  font-size: 30rpx;
  font-weight: 600;
}
