/* 意见反馈界面样式 */
page {
  background-color: #f3f4f6;
}
/* 标题样式 */
.feedback .fb_mian .fb_title {
  font-style: 26rpx;
  color: #9e8080;
  padding: 15rpx;
}
/* tips样式 */
.feedback .fb_mian .fb_tips {
  display: flex;
  flex-wrap: wrap;
}
.feedback .fb_mian .fb_tips .tip {
  width: 30vw;
  padding: 10rpx;
  text-align: center;
  background-color: #fff;
  margin: 10rpx;
}
/* 文本域与自定义工具样式 */
.feedback .fb_content {
  background-color: #fff;
  margin-top: 20rpx;
  padding: 15rpx;
}
.feedback .fb_content textarea {
  padding: 20rpx;
}
.feedback .fb_content .fb_tool {
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 20rpx;
}
.feedback .fb_content .fb_tool button {
  width: 90rpx;
  height: 90rpx;
  font-size: 60rpx;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  color: #ccc;
  margin: 0;
}
/* 底部提交按钮样式 */
.feedback .form_btn_wrap {
  margin-top: 20rpx;
}
.feedback .form_btn_wrap button {
  background-color: var(--themeColor);
  color: #fff;
  width: 30vw;
  margin-right: 5vw;
  display: flex;
  justify-content: center;
  align-items: center;
}
