.collect .collect_main {
  background-color: #f3f4f6;
}
.collect .collect_main .collect_title {
  padding: 30rpx 0;
}
.collect .collect_main .collect_title .collect_tips {
  padding: 15rpx;
  border: 1rpx solid #ccc;
  margin-left: 20rpx;
  background-color: #fff;
}
.collect .collect_main .collect_title .active {
  color: var(--themeColor);
  border-color: currentColor;
}
/* 收藏商品列表样式 */
.collect_content .goods_item {
  border-bottom: 2rpx solid #cccfcc;
  display: flex;
  background-color: #fff;
}
.collect_content .goods_item .goods_img {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.collect_content .goods_item .goods_img image {
  width: 70%;
}
.collect_content .goods_item .goods_info {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  flex: 3;
}
.collect_content .goods_item .goods_info .info_title {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  margin-top: 10rpx;
}
.collect_content .goods_item .goods_info .info_price {
  color: var(--themeColor);
  font-style: 32rpx;
}
